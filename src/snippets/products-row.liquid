<div class="products-row">

  <!-- header -->
  <div class="block">
    {% if products_title %}
      <a href="{{ products_link }}" class="is-size-4 has-text-weight-bold has-text-info">{{ products_title }}</a>
    {% endif %}
    <div class="columns">
      <div class="column is-narrow">
        {% if products_description %}
          <h5 class="is-size-5">{{ products_description }}</h5>
        {% endif %}
      </div>
      {% if products_link %}
        <div class="column has-text-right is-hidden-mobile">
          <a class="is-size-5 has-text-primary" href="{{ products_link }}">
            {% if products_link_text %}
              {{ products_link_text }}
            {% else %}
              Show more
            {% endif %}
          </a>
        </div>
      {% endif %}
    </div>

    <!-- products -->
    <div class="products-row__products columns is-mobile is-multiline">
      {% for product in products %}
        <div class="column is-half-mobile is-one-quarter-tablet is-one-fifth-desktop">
          {% include 'product-preview' %}
        </div>
      {% endfor %}
    </div>
  </div>

</div>